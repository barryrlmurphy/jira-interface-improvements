{
  "manifest_version": 2,

  "name": "Jira Interface Improvements",
  "description": "Some simple interface improvements for Jira",
  "version": "0.1.2",

  "browser_action": {
   "default_icon": "icon.png",
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.atlassian.net/*"
      ],
      "css": [
        "content.css"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],

  "permissions": [
      "https://*.atlassian.net/*"
   ]
}
